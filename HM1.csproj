using System;
using System.Collections.Generic;

namespace Homework1
{
    class Program
    {
        static void Main(string[] args)
        {
            User jame = new User("jame_watom", "jame@mail.com");
            Tshirt order_1 = new Tshirt("L ", "Red ",  500.00f, " Superman");
            Tshirt order_2 = new Tshirt("M ", "Black ",  750.00f, " Batman");
            Tshirt order_3 = new Tshirt("S ", "Pink ", 625.00f, " Panter");
            Address Jameaddress = new Address("131/75 Phutthamonthon", "Nakhon Pathom", "10180"); 

            ShoppingCart JameOrder = new ShoppingCart();
